---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - pce
    - nav
    - post
    - posts
    - docs
    - sortedPosts
    - categoryList
    - tagList
  addAllPagesToCollections: true
layout: layouts/default.njk
eleventyComputed:
  title: Tagged `{{ tag.toLowerCase() }}`
  shorttitle: '{{ tag.toLowerCase() }}'
permalink: /tags/{{ tag | slug }}/
---


{% block content %}
  {% set posts = collections[tag] %}
  {% include 'snippets/postloop.njk' %}
  <p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
{% endblock %}
