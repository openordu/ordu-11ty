---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
  filter:
    - all
    - pce
    - nav
    - post
    - posts
    - docs
    - sortedPosts
    - categoryList
    - tagList
layout: layouts/topic.njk
eleventyComputed:
  title: Tagged `{{ tag.tagName | safe }}`
  shorttitle: '{{ tag.tagName | safe }}'
permalink: /tags/{{ tag.slug }}/
---

{% block content %}
  {% set posts = collections[tag.tagName] %}
  {% include 'snippets/tagncatsloop.njk' %}
  <p>See <a href="{{ '/tags/' | url }}" class="badge badge-primary">all tags</a>.</p>
{% endblock %}
