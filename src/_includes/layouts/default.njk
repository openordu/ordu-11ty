<!doctype html>
<html class="h-100" lang="{{ metadata.language }}">

  <head>
    {% include 'snippets/head.njk' %}
  </head>

  <body class="h-100">

    {% include 'snippets/navbar.njk' %}

    <main class="container-fluid">
      <div class="row d-flex align-items-start">
        <div class="row d-flex justify-content-center">
            <div class="aside order-md-1 order-2 col col-12 col-sm-3 flex-shrink-0 p-2 bg-white">
              {% include 'snippets/sidebar.njk' %}
            </div>
            <div class="main order-md-2 order-1 col col-12 col-sm-9">
              {% include 'snippets/maincontent-details.njk' %}
            </div>
        </div>
      </div>
    </main>

    <footer class="container">
      {% include 'snippets/footer.njk' %}
    </footer>
    {% if "```mermaid" in content %}
    <script src="/js/mermaid.min.js"></script>
    <script type="module">
      import '/js/mermaid-setup.js';
    </script>
    {% endif %}
  </body>

</html>
