{
  "name": "11straps",
  "version": "0.2.0",
  "description": "simple 11ty and Bootstrap5 boilerplate",
  "license": "MIT",
  "private": "true",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "main": "index.html",
  "scripts": {
    "build": "npm run clean && npm run clean-prod  && node --max-old-space-size=6144 node_modules/.bin/eleventy && gulp sass && gulp dist-assets && gulp minify-css && gulp prod-copy && gulp inject-min-css && gulp purgecss && gulp minify-html",
    "build-dev": "node --max-old-space-size=6144 node_modules/.bin/eleventy && gulp dist-assets && gulp sass",
    "11ty": "eleventy && gulp inject-css",
    "sync": "gulp browser-sync",
    "watch-dev": "npm run build-dev && npm run sync",
    "postinstall": "gulp copy-assets",
    "scss": "node-sass --output-style compressed -o dev/css/ src/scss/theme.scss",
    "watch:all": "onchange -i -d 1000 -p 2000 'src/' -- npm run build-dev",
    "serve": "eleventy --serve",
    "watch": "npm run clean && npm run build-dev && run-p sync watch:all",
    "clean": "gulp clean-dev",
    "clean-prod": "gulp clean-public",
    "docker:build": "docker build . -t eleventy:latest || true",
    "docker:run": "docker run -d -p 8080:8080 eleventy:latest",
    "docker:stop": "docker ps -a | grep 8080 | awk '{print $1}' | xargs docker kill || true; docker ps -a | grep 8080 | awk '{print $1}' | xargs docker rm || true; sleep 10",
    "docker:watch": "onchange -i -k 'src/' -- bash -c 'npm run build-dev && npm run docker:build && npm run docker:stop && npm run docker:run'"
  },
  "dependencies": {
    "@11ty/eleventy": "1.0.1",
    "@11ty/eleventy-navigation": "^0.3.3",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.1.0",
    "bootstrap": "5.1.3",
    "bootstrap-icons": "1.8.1",
    "clean-css": "^5.3.0",
    "date-fns": "^2.30.0",
    "flowchart.js": "^1.17.1",
    "fs-extra": "^11.1.1",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-clean-css": "^4.2.0",
    "gulp-dart-sass": "^1.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "int": "^0.2.0",
    "katex": "^0.16.0",
    "luxon": "^3.3.0",
    "markdown-it": "^13.0.1",
    "markdown-it-align": "^0.1.0",
    "markdown-it-anchor": "^8.6.4",
    "markdown-it-attrs": "^4.1.4",
    "markdown-it-codetabs": "^1.2.0",
    "markdown-it-container": "^3.0.0",
    "markdown-it-emoji": "^2.0.2",
    "markdown-it-external-links": "^0.0.6",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-mark": "^3.0.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "markdown-it-table-of-contents": "^0.6.0",
    "markdown-it-task-lists": "^2.1.1",
    "markdown-it-texmath": "^1.0.0",
    "markdown-it-tips": "^1.0.3",
    "markdown-it-tips-bootstrap": "https://github.com/openordu/markdown-it-tips-bootstrap",
    "markdown-it-video": "^0.6.3",
    "npm-watch": "^0.11.0",
    "watch": "^1.0.2"
  },
  "author": "Christopher Godwin",
  "devDependencies": {
    "gulp-html-replace": "^1.6.2",
    "gulp-purgecss": "^4.1.3",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "react-is": "^18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openordu/ordu-eleventy"
  },
  "keywords": [],
  "bugs": {
    "url": ""
  },
  "homepage": "https://celticpaganism.org/"
}
